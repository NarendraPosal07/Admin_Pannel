<%- include('header') -%>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .main-wrapper {
        min-height: 100vh;
    }

    .main-content {
        flex: 1;
        padding: 2.5rem 1.5rem;
    }

    .header-section {
        max-width: 1200px;
        margin: 0 auto 2.5rem;
        text-align: center;
    }

    .header-section h1 {
        color: white;
        font-size: 2.8rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    }

    .header-section p {
        color: rgba(255, 255, 255, 0.95);
        font-size: 1.15rem;
    }

    .blogs-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .blog-item {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        flex-direction: column;
    }

    .blog-item:hover {
        transform: translateY(-8px);
        box-shadow: 0 16px 40px rgba(0, 0, 0, 0.25);
    }

    .img-wrapper {
        width: 100%;
        height: 280px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        position: relative;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .blog-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        display: block;
    }

    .content-wrapper {
        padding: 1.5rem;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .blog-heading {
        font-size: 1.4rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 0.75rem;
        line-height: 1.3;
        min-height: 2.6rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .blog-desc {
        font-size: 0.95rem;
        color: #718096;
        line-height: 1.6;
        margin-bottom: 1.25rem;
        flex: 1;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        min-height: 4.8rem;
    }

    .button-group {
        display: flex;
        gap: 0.75rem;
        margin-top: auto;
    }

    .action-btn {
        flex: 1;
        padding: 0.7rem 1rem;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.9rem;
        text-decoration: none;
        text-align: center;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.4rem;
    }

    .edit-btn {
        background: #4299e1;
        color: white;
    }

    .edit-btn:hover {
        background: #3182ce;
        color: white;
        transform: translateY(-2px);
    }

    .delete-btn {
        background: #fc8181;
        color: white;
    }

    .delete-btn:hover {
        background: #f56565;
        color: white;
        transform: translateY(-2px);
    }

    .no-blogs {
        text-align: center;
        padding: 4rem 2rem;
        color: white;
        max-width: 500px;
        margin: 0 auto;
    }

    .no-blogs-icon {
        font-size: 5rem;
        margin-bottom: 1.5rem;
        opacity: 0.8;
    }

    .no-blogs h2 {
        font-size: 2rem;
        margin-bottom: 0.75rem;
        font-weight: 700;
    }

    .no-blogs p {
        font-size: 1.1rem;
        opacity: 0.9;
    }

    @media (max-width: 768px) {
        .blogs-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .header-section h1 {
            font-size: 2.2rem;
        }

        .main-content {
            padding: 2rem 1rem;
        }

        .img-wrapper {
            height: 240px;
        }
    }

    @media (min-width: 769px) and (max-width: 1024px) {
        .blogs-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>

<body>
    <div class="main-wrapper d-flex">
        <%- include('nav') -%>

        <div class="main-content">
            <div class="header-section">
                <h1>My Blog Collection</h1>
            </div>

            <% if (blogData && blogData.length > 0) { %>
                <div class="blogs-grid">
                    <% blogData.forEach((data) => { %>
                        <div class="blog-item">
                            <div class="img-wrapper">
                                <img src="<%= data.poster %>" 
                                     alt="<%= data.blog %>" 
                                     class="blog-img"
                                     onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%22400%22 height=%22280%22%3E%3Crect fill=%22%23667eea%22 width=%22400%22 height=%22280%22/%3E%3Ctext fill=%22white%22 x=%2250%25%22 y=%2250%25%22 dominant-baseline=%22middle%22 text-anchor=%22middle%22 font-size=%2224%22 font-family=%22Arial%22%3ENo Image%3C/text%3E%3C/svg%3E'">
                            </div>

                            <div class="content-wrapper">
                                <h3 class="blog-heading"><%= data.blog || 'Untitled Blog' %></h3>
                                
                                <p class="blog-desc">
                                    <%= data.description && data.description.trim() !== '' 
                                        ? data.description 
                                        : 'No description provided for this blog post. Click edit to add more details about your content.' %>
                                </p>

                                <div class="button-group">
                                    <a href="/editDoc/<%= data.id %>" class="action-btn edit-btn">
                                        <i class="bi bi-pencil-square"></i>
                                        Edit
                                    </a>
                                    <a href="/deleteDoc/<%= data.id %>" class="action-btn delete-btn">
                                        <i class="bi bi-trash3-fill"></i>
                                        Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="no-blogs">
                    <div class="no-blogs-icon">üìù</div>
                    <h2>No Blogs Yet</h2>
                    <p>Your blog collection is empty. Start creating your first post and share your thoughts with the world!</p>
                </div>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>