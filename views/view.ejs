<%- include('header') -%>

    <body>

        <div class="main-wrapper d-flex">


            <%- include('nav') -%>

                <div class="container main-content">
                    <h1>
                        View
                    </h1>
                    <div class="t-wrap m-2 p-4 bg-success bg-gradient rounded d-flex flex-wrap">

                        <div class="line my-4"></div>

                        <% blogData.forEach((data)=> { %>
                            <div class="card m-2 p-2" style="width: 24rem;">

                                <img src="<%= data.poster %>" class="card-img-top" width="100%" alt="Banner">

                                <div class="card-body">

                                    <h4 class="card-title">
                                        <%= data.blog %>
                                    </h4>

                                    <p class="card-text">
                                        <%= data.description %>
                                    </p>

                                </div>
                                <div class="btn">
                                    <button class="rounded px-3 py-1 bg-success text-white border"><a
                                            href="/deleteDoc/<%= data.id %>"
                                            class="text-white text-decoration-none">DELETE</a></button>
                                    <button class="rounded px-3 py-1 bg-success text-white border"><a
                                            href="/editDoc/<%= data.id %>"
                                            class="text-white text-decoration-none">EDIT</a></button>
                                </div>
                            </div>

                            <% }) %>

                    </div>
                </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>

    </body>

</html>